/*wxss*/
.container{
  background-color: #fcfef0;
  height:100vh;
}
.user-info{
  background-color: #a4d091;
  width: 100vw;
  display: flex;
  height: 180rpx;
  align-items: center;
}
.basic-info{
  width: 50vw;
  display: flex;
  height: 180rpx;
  align-items: center;
}
.avatar {
  width: 120rpx;
  height:120rpx;
  border-radius:50%;
  display: flex;
  overflow:hidden;
  align-items: center;
  border: 2px solid white;
  margin-left: 20rpx;
}
.nickname{
  display: flex;
  color:white;
  justify-content:center;
  align-items:center;
  font-size: 16px;
  margin-left: 20rpx;
}
.detail{
  font-size: 14px;
  color:white;
  width: 50vw;
  text-align: right;
  padding-right: 20px;
}
.function-area{
  background-color: white;
  background-size:100% 100%;
  margin-top:20rpx;
  width:95vw;
  border-radius: 20rpx;
  height: 500rpx;
  box-shadow:0px 2px 5px 5px #eeeeee;
}
.function-item{
  background-color: white;
  height:100rpx;
  display: flex;
  justify-content:flex-start;
  align-items:center;
  border-bottom: 1px solid #eeeeee;
}
.join-record{
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
}
.item-title{
  display: flex;
  align-items:center;
  font-size: 14px;
  color: black;
  width: 50vw;
}
.item-icon{
  width: 24px;
  height:24px;
  display: flex;
  align-items: center;
  margin-left: 10px;
}
.title-content{
  margin-left: 10px;
}
.right-arrow{
  width: 50vw;
  display: flex;
  align-items: center;
  flex-direction: row-reverse;
}
.arrow-icon{
  width: 16px;
  height:16px;
  margin-right: 10px;
}

