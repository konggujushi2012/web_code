.container{
  background-color: #fcfef0;
  width: 100vw;
  height: 100vh;
}
.basic_info{
  background-color:white;
}
.info-item{
  width: 100vw;
  height: 100rpx;
  display: flex;
  justify-content:flex-start;
  align-items:center;
  font-size: 14px;
}
.item-title{
  width: 50vw;
  height: 100rpx;
  text-align: left;
  display: flex;
  align-items: center;
  margin-left: 20px;
}
.item-content{
  width:50vw;
  height: 100rpx;
  display: flex;
  align-items: center;
  flex-direction: row-reverse;
  margin-right: 20px;
}
.user-avatar{
  width:60rpx;
  height: 60rpx;
  border-radius:50%;
}
.apply_info{
  margin-top:20rpx;
  background-color:white;
  width: 100vw;
  height:300rpx;
  font-size: 14px;
  display: flex;
  align-items: center;
  justify-content: center; 
}